{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@mcp/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./apps/gateway" },
    { "path": "./apps/linear-mcp-server" },
    { "path": "./packages/capabilities" },
    { "path": "./packages/mcp-client-bridge" },
    { "path": "./packages/schemas" },
    { "path": "./packages/utils" }
  ],
  "exclude": ["node_modules", "dist"]
}
